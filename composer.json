{
    "name": "chiron/http",
    "description": "Give it a nice description!",
    "keywords": [],
    "license": "MIT",
    "type": "library",
    "autoload": {
        "psr-4": {
            "Chiron\\Http\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Chiron\\Http\\Test\\": "tests/"
        }
    },
    "require": {
        "php": "^7.2",
        "chiron/http-message-util": "^1.0",
        "chiron/pipeline": "^3.5",
        "chiron/psr17factoryfinder": "^0.1",
        "nyholm/psr7-server": "^0.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "phpstan/phpstan": "^0.12.0",
        "overtrue/phplint": "^2.0",
        "chiron/coding-standard": "^3.0",
        "chiron/container": "^3.6",
        "nyholm/psr7": "^1.3"
    },
    "scripts": {
        "phpunit": "phpunit --colors=always",
        "test-coverage": "phpunit --coverage-clover clover.xml",
        "phpstan": "phpstan analyse src --level=max",
        "phplint": "phplint --ansi",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "chiron": {
            "providers": [
                "Chiron\\Http\\Provider\\HttpFactoriesServiceProvider"
            ],
            "bootloaders": [
                "Chiron\\Http\\Bootloader\\PublishHttpBootloader",
                "Chiron\\Http\\Bootloader\\MiddlewareQueueBootloader",
                "Chiron\\Http\\Bootloader\\SapiDispatcherBootloader"
            ]
        }
    }
}
